{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
              "test",
              "-c",
              "release",
              "-f",
              "netcoreapp2.2",
              "${workspaceFolder}/HeatKeeper.Server.WebApi.Tests/HeatKeeper.Server.WebApi.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
              "kind": "test",
              "isDefault": true
            }
          },
          {
            "label": "test with code coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
              "test",
              "-c",
              "release",
              "-f",
              "netcoreapp2.2",
              "/p:CollectCoverage=true",
              "/p:Exclude=\"[xunit*]*\"",
              "/p:CoverletOutputFormat=lcov",
              "${workspaceFolder}/HeatKeeper.Server.WebApi.Tests/HeatKeeper.Server.WebApi.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
              "kind": "test",
              "isDefault": true
            }
          }
    ]
}